---
import type { Playlist } from '../lib/data.ts';
import CardPlayButton from './CardPlayButton.jsx';
interface Props {
    playlist: Playlist;
}
const { playlist } = Astro.props;
const { id, title, cover, artists } = playlist;

const Artists = artists.join(', ');
---
<article class="group relative bg-zinc-500/30 hover:bg-zinc-800 hover:shadow-xl rounded-md transition-all duration-300 ">
    <div class="absolute right-4 bottom-[5.5rem] translate-y-4 transition-all  duration-500 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 z-10 text-black">
        <CardPlayButton id={id} client:visible />

    </div>
    <a href={`/playlist/${id}`} class=" playlist-item  relative flex items-center gap-5 p-2 pb-6 w-44 flex-col " transition:name=`playlist ${id} box`>
        <picture class=" aspect-square w-full h-auto flex-none">
            <img src={cover} alt={title} class="w-full h-full object-cover rounded-md" transition:name=`playlist ${id} image` />
        </picture>
        <div class="flex flex-auto flex-col px-2">
            <h4 class="text-zinc-100 text-sm font-medium" transition:name=`playlist ${id} title`>
                {title}
            </h4>
            <span class="text-zinc-400 text-xs" transition:name=`playlist ${id} artists`>
                {Artists}
            </span>
        </div>
    </a>

</article>

